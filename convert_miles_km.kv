<ConvertMilesKm>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Up'
            on_press: root.increment_miles(1)
        TextInput:
            id: input_miles
            text: ''
        Button:
            text: 'Down'
            on_press: root.increment_miles(-1)
    Button:
        text: 'Convert'
        on_press: root.convert()
    Label:
        text: root.output_text
    Label:
        text: 'Enter miles and press "Convert"'
